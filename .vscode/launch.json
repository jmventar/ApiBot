{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ApiBot single replace dict",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": ["-c", "-f", "${workspaceFolder}/data/single_replace_dict.json"]
    },
    {
      "name": "ApiBot single replace list",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": ["-c", "-f", "${workspaceFolder}/data/single_replace_lists.json"]
    },
    {
      "name": "ApiBot single replace + call",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": [
        "-c",
        "-f",
        "${workspaceFolder}/data/single_replace_lists.json",
        "-u",
        "https://google.com/{{0}}"
      ]
    },
    {
      "name": "ApiBot single replace dry run",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": [
        "--dry",
        "-c",
        "-f",
        "${workspaceFolder}/data/single_replace_lists.json",
        "-u",
        "https://google.com/{{0}}"
      ]
    },
    {
      "name": "ApiBot multiple replace + call",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": [
        "-f",
        "${workspaceFolder}/data/multiple_replace.json",
        "-m",
        "GET",
        "-u",
        "https://google.com/{{id}}/{{name}}/{{map_id}}/{{map}}",
        "-t",
        "123456",
        "-d",
        "2.5"
      ]
    },
    {
      "name": "run all test",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": ["-f", "${workspaceFolder}/data/example_input.json"]
    }
  ]
}
