{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ApiBot JSON single replace dict",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": [
        "--clean",
        "-f",
        "${workspaceFolder}/data/single_replace_dict.json"
      ]
    },
    {
      "name": "ApiBot JSON single replace list",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": [
        "--clean",
        "-f",
        "${workspaceFolder}/data/single_replace_lists.json"
      ]
    },
    {
      "name": "ApiBot CSV + dry",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": [
        "--dry",
        "-f",
        "${workspaceFolder}/data/multiple_replace.csv",
        "-s",
        "csv"
      ]
    },
    {
      "name": "ApiBot CSV single call",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": [
        "-f",
        "${workspaceFolder}/data/single_replace.csv",
        "-u",
        "https://jsonplaceholder.typicode.com/posts/{{post_num}}",
        "-s",
        "csv"
      ]
    },
    {
      "name": "ApiBot CSV multiple call",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": [
        "-f",
        "${workspaceFolder}/data/multiple_replace.csv",
        "-u",
        "https://google.com/{{replace_1}}/{{replace_2}}/{{replace_3}}",
        "-s",
        "csv",
        "-r"
      ]
    },
    {
      "name": "ApiBot JSON single call",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": [
        "--clean",
        "-f",
        "${workspaceFolder}/data/single_replace_lists.json",
        "-u",
        "https://jsonplaceholder.typicode.com/posts/{{0}}",
        "-r"
      ]
    },
    {
      "name": "ApiBot JSON multiple call",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": [
        "--clean",
        "-f",
        "${workspaceFolder}/data/multiple_replace.json",
        "-m",
        "POST",
        "-u",
        "https://jsonplaceholder.typicode.com/posts/1?name={{name}}&map_id={{map_id}}&map={{map}}",
        "-t",
        "123456",
        "-d",
        "2.5",
        "-r"
      ]
    }
  ]
}
